<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madibasoft.dreamtools"
    android:versionCode="20"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.madibasoft.dreamtools.DreamToolsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.madibasoft.dreamtools.SettingsActivity" />
        <activity android:name="com.madibasoft.dreamtools.ServiceSelectorActivity" />
        <activity android:name="com.madibasoft.dreamtools.AboutActivity" />
        <activity android:name="com.madibasoft.dreamtools.SatfinderActivity" />
        <activity android:name="com.madibasoft.dreamtools.VideoActivity" />
        <activity
            android:name="com.madibasoft.dreamtools.ZapActivity"
            android:theme="@style/ZapTitleTheme" />
        <activity
            android:name="com.madibasoft.dreamtools.MovieActivity"
            android:theme="@style/ZapTitleTheme" />
        <activity android:name="com.madibasoft.dreamtools.ControlActivity" />
        <activity android:name="com.madibasoft.dreamtools.AddTimerActivity" />
        <activity
            android:name="com.madibasoft.dreamtools.MonitorActivity"
            android:label="@string/monitor" />
    </application>

</manifest>
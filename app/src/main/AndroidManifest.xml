            </intent-filter>
        </activity>
        <activity android:name="SettingsActivity"></activity>
        <activity android:name=".ServiceSelectorActivity"></activity>
        <activity android:name="AboutActivity"></activity>
        <activity android:name="SatfinderActivity"></activity>
        <activity android:name="VideoActivity"></activity>
        <activity android:name="ZapActivity" android:theme="@style/ZapTitleTheme"></activity>
        <activity android:name="MovieActivity" android:theme="@style/ZapTitleTheme"></activity>
        <activity android:name="ControlActivity"></activity>
        <activity android:name="AddTimerActivity"></activity>
        <activity android:name="MonitorActivity" android:label="@string/monitor"></activity>
    </application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE" />
	
</manifest>